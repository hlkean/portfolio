---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>About page!</h1>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: var(--spacing-100);
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: var(--spacing-125);
		line-height: 1.6;
	}
	h1 {
		font-size: var(--spacing-400);
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>