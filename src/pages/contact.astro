---
import ContactForm from '../components/ContactForm.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout title="Henry Kean | Contact">
	<main>
		<h1>Contact</h1>
		<p>If you have a question, want to work together, or are just looking for some tech advice, don't hesitate to reach out!</p>
		<ContactForm title="Contact me"/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: var(--spacing-100);
		width: 800px;
		max-width: calc(100% - 2rem);
		color: var(--color-primary);
		font-size: var(--spacing-125);
		line-height: 1.6;
	}
	h1 {
		font-size: var(--spacing-400);
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: var(--spacing-100);
	}
	ul {
		display: flex;
		flex-direction: column;
		justify-content: space-around;
		padding: 0;
		gap: var(--spacing-125);
	}
	li {
		list-style-type: none;
	}
	a {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		border-radius: var(--spacing-75);
		background-color: var(--color-primary);
		border: 2px solid var(--color-secondary);
		color: var(--color-neutral-primary);
		padding: var(--spacing-100);
	}
	a:hover, a:focus-visible {
		background-color: var(--color-neutral-primary);
		border: 2px solid var(--color-primary);
		color: var(--color-primary);
	}
	a:focus-visible {
		outline-offset: var(--spacing-25);
	}
	.icon {
		font-size: var(--spacing-200);
	}
	.label {
		margin-left: var(--spacing-100);
	}
	.form-container {
		background-color: var(--color-secondary);
		border: 0 solid var(--color-primary);
		max-height: 0;
		max-height: 1000px;
		border-width: var(--spacing-25);
		width: 100%;
		border-radius: var(--spacing-100);
		overflow: hidden;
		margin-bottom: var(--spacing-200);
	}

</style>
