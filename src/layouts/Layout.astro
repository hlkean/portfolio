---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/variables.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const navItems = [{
	href: '/',
	text: 'Home'
},
{
		href: '/about',
		text: 'About'
},
{
		href: '/contact',
		text: 'Contact'
}
];

const footerItems = [{
	href: 'https://github.com/hlkean',
	icon: "fa-brands fa-github",
	text: 'Github',
	isExternal: true
},
{
	href: 'https://www.linkedin.com/in/henrykean',
	icon: "fa-brands fa-linkedin",
	text: 'LinkedIn',
	isExternal: true
}];
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-FS5E08M5H6"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-FS5E08M5H6');
		</script>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="/fonts/fontawesome/css/fontawesome.css" rel="stylesheet" />
		<link href="/fonts/fontawesome/css/brands.css" rel="stylesheet" />
		<link href="/fonts/fontawesome/css/solid.css" rel="stylesheet" />
	</head>
	<body>
		<Header title={'Henry Kean'} navItems={navItems} />
		<slot />
		<Footer copyright={"Henry Kean"} footerItems={footerItems}/>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Righteous';
		src: url('/fonts/Righteous-Regular.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'Montserrat';
		src: url('/fonts/Montserrat-VariableFont_wght.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	html {
		font-family: var(--font-body);
		background: var(--color-neutral-primary);
		font-size: 16px;
	}
	textarea, input {
		font-family: var(--font-body);
	}
	h1, h2, h3, h4, h5, h6, button, label {
		font-family: var(--font-heading);
	}
	body {
		margin: var(--spacing-0);
	}
	a {
		color: var(--color-primary);
		font-weight: bold;
	}
	a:hover, a:active {
		color: var(--color-neutral-primary);
		background-color: var(--color-primary);
	}
</style>
